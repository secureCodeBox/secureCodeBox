// This test is currently disabled by changing its extension to something different to ´.test.js´
// This is done since the sslyze release has not yet been published and the test will result into ImagePullBackOff
// Should reenabled once the SCB 3.9.0 Release build pipeline is successful 

const { cascadingScan } = require("../../../../tests/integration/helpers");

jest.retryTimes(3);

test(
  "Cascading Scan nmap -> sslyze on unsafe-https",
  async () => {
    const { categories, severities, count } = await cascadingScan(
      "nmap-unsafe-https-sslyze",
      "nmap",
      ["-Pn", "-sV", "unsafe-https.demo-targets.svc", "-p", "443"],
      {
        nameCascade: "https-tls-scan",
        matchLabels: {
          "securecodebox.io/invasive": "non-invasive",
          "securecodebox.io/intensive": "light",
        },
      },
      4 * 60
    );

    expect(count).toBe(4);
    expect(categories).toMatchInlineSnapshot(`
      Object {
        "Invalid Certificate": 1,
        "Outdated TLS Version": 2,
        "TLS Service Info": 1,
      }
    `);
    expect(severities).toMatchInlineSnapshot(`
      Object {
        "informational": 1,
        "medium": 3,
      }
    `);
  },
  5 * 60 * 1000
);
