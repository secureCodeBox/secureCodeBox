    apiVersion: cascading.securecodebox.io/v1
    kind: CascadingRule
    metadata:
      labels:
        securecodebox.io/intensive: medium
        securecodebox.io/invasive: non-invasive
      name: zap-http
    spec:
      matches:
        anyOf:
          - attributes:
              service: http
              state: open
            category: Open Port
          - attributes:
              service: http-*
              state: open
            category: Open Port
      scanSpec:
        parameters:
          - -t
          - http://{{$.hostOrIP}}:{{attributes.port}}
        scanType: zap-baseline-scan
